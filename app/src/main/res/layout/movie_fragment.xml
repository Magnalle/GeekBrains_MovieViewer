<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name = "viewModel"
            type = "com.magnalleexample.geekbrains_movieviewer.ui.movie.MovieViewModel"
            />
        <variable
            name="movieData"
            type="com.magnalleexample.geekbrains_movieviewer.domain.entity.MovieData" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.movie.MovieFragment">

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/add_remove_to_favorites_toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:textOff="@string/add_to_favorites"
            android:textOn="@string/remove_from_favorites"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_poster_image_view" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/add_remove_to_watch_list_toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:textOff="@string/add_to_watch_list"
            android:textOn="@string/remove_from_watch_list"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_remove_to_favorites_toggle_btn" />

        <ImageView
            android:id="@+id/movie_poster_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/movie_image"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/movie_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:nestedScrollingEnabled="false"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Some movie with long name 3432552 dfgfdg dgdsgd dgdgdsg  sdfsdgs" />

        <TextView
            android:id="@+id/movie_imdb_caption_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text = "@string/imdb"
            app:layout_constraintStart_toEndOf="@+id/movie_poster_image_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_title_text_view" />

        <TextView
            android:id="@+id/movie_imdb_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_imdb_caption_text_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_title_text_view"
            tools:text="123456789" />

        <TextView
            android:id="@+id/movie_release_date_caption_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_poster_image_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_imdb_caption_text_view"
            android:text="@string/release_date" />

        <TextView
            android:id="@+id/movie_release_date_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_release_date_caption_text"
            app:layout_constraintTop_toBottomOf="@+id/movie_imdb_caption_text_view"
            tools:text="2020" />

        <TextView
            android:id="@+id/movie_production_companies_caption_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_poster_image_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_release_date_caption_text"
            android:text="@string/produced_by" />

        <TextView
            android:id="@+id/movie_production_companies_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_production_companies_caption_text_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_release_date_caption_text"
            tools:text="Disney" />

        <TextView
            android:id="@+id/movie_production_countries_caption_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_poster_image_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_production_companies_text_view"
            android:text="@string/country" />

        <TextView
            android:id="@+id/movie_production_countries_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_production_countries_caption_text_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_production_companies_text_view"
            tools:text="USA" />

        <TextView
            android:id="@+id/movie_genres_caption_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/genres"
            app:layout_constraintStart_toEndOf="@+id/movie_poster_image_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_production_countries_text_view" />

        <TextView
            android:id="@+id/movie_genres_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_genres_caption_text_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_production_countries_text_view"
            tools:text="Horror, Fantasy, Action" />

        <TextView
            android:id="@+id/movie_keywords_caption_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/keywords"
            app:layout_constraintStart_toEndOf="@+id/movie_poster_image_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_genres_text_view" />

        <TextView
            android:id="@+id/movie_keywords_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/movie_keywords_caption_text_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_genres_text_view"
            tools:text="some keywords, bla-bla-bla" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/labelBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="add_remove_to_watch_list_toggle_btn, movie_keywords_text_view" />

        <TextView
            android:id="@+id/movie_overview_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelBarrier"
            tools:text="Overview for movie" />

        <TextView
            android:id="@+id/movie_credits_caption_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_overview_text_view"
            android:text="@string/credits" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>