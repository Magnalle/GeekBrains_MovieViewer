<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name = "viewModel"
            type = "com.magnalleexample.geekbrains_movieviewer.ui.home.HomeViewModel"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/genres_spinner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatSpinner>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/watch_list_recycler_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/watchlist_textView">
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorites_recycler_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/favorites_textView">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/watchlist_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/watchlist"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/genres_spinner"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="205dp" />
        <TextView
            android:id="@+id/favorites_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favorites"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/watch_list_recycler_view"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="205dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>