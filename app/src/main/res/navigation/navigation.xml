<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.magnalleexample.geekbrains_movieviewer.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_movieFragment"
            app:destination="@id/movieFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_right" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.magnalleexample.geekbrains_movieviewer.ui.movie.MovieFragment"
        android:label="movie_fragment"
        tools:layout="@layout/movie_fragment" >
        <argument
            android:name="movieData"
            app:argType="com.magnalleexample.geekbrains_movieviewer.domain.entity.MovieData" />
        <action
            android:id="@+id/action_movieFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>